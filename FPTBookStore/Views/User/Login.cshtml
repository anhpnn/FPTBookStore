<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/LayOut/UserLayout.cshtml";
}
<div id="KhachHang">
    <h2>Login</h2>
    <h3 id="CanhBao">@ViewBag.Notification</h3>
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        <span>Account</span><br/>
        @Html.TextBox("txtAccount");<br/>
        <span>Password</span><br/>
        @Html.Password("txtPassword");<br />
        <input type="submit" style="background-color:green;color:white;cursor:pointer;"id="btnSubmit" name="btnSubmit" value="Login" />
    }
</div>

