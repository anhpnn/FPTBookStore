@model FPTBookStore.Models.Book

@{
    ViewBag.Title = "View Book";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Detail Book Imformation</h2>

<div style="font-size:16px;word-wrap: break-word;">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @string.Format("{0:0,0}", Model.Price) $
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.Raw(Model.Details)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoverImage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdateDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdateDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublisherID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publisher.PublisherName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookStatus)
        </dt>

            @if (Model.BookStatus == 1)
            {
                <dd>New</dd>
            }
            else
            {
                <dd>Old</dd>
            }
    </dl>
</div>

<img src="@Url.Content("~/ImageBook/"+Model.CoverImage)" width="500" height="750">

<p>
    @Html.ActionLink("Edit", "Edit", new { @_BookID = Model.BookID }) | 
    @Html.ActionLink("Back to Book Manage", "Index")
</p>
